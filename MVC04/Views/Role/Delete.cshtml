@model MVC04.ViewModels.RoleViewModels.RoleViewModel

@{
    ViewData["Title"] = "Delete Role";
}

<h1>Role Manager - Delete</h1>
<h3 class="text-danger">Are You Sure You Want To Delete @Model.RoleName Role?</h3>
<hr />
<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="RoleName"></label>
        <input asp-for="RoleName" class="form-control" readonly />
    </div>
    <br />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Back To List</a>
</form>