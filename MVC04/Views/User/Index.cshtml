@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "All Users";
}

<h1>All Users</h1>

<div class="row justify-content-between my-3">
 
    <div class="col-md-8">
        <form asp-action="Index" method="get" class="d-flex">
            <input type="text" name="searchValue" class="form-control me-2" placeholder="Search Employee By Name" />
            <button type="submit" class="btn btn-success">Search</button>
        </form>
    </div>
</div>

@if (Model.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.FName)</th>
                <th>@Html.DisplayNameFor(model => model.LName)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FName</td>
                    <td>@user.LName</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info">Details</a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Edit</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning mt-4">
        <h4>No users found!</h4>
    </div>
}